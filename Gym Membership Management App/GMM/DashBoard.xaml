<Window x:Class="GMM.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMM"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="DashBoard" Height="600" Width="800" MaxHeight="600" MinHeight="600" MaxWidth="800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="50*"/>
            <ColumnDefinition Width ="50*"/>

        </Grid.ColumnDefinitions>

        <Label Content="Gym Membership Management" Grid.Column="0" Grid.Row="0" FontSize="15" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Label Content="DashBoard" Grid.Column="0" Grid.Row="1" FontSize="10" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
            <TextBox Name="txbSearch" Height="26" Width="100" Margin="10,0"/>
            <Button Name="btnSearch" Height="26" Width="100" Margin="10,0" Content="Search"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Name="btnClient" Height="26" Width="100" Margin="10,0" Content="Clients"/>
            <Button Name="btnPlan" Height="26" Width="100" Margin="10,0" Content="Plans"/>
            <Button Name="btnAdmin" Height="26" Width="100" Margin="10,0" Content="Admin" Click="btnAdmin_Click" />
        </StackPanel>

        <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="10" Padding="4">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.5" ShadowDepth="4"/>
                </Border.Effect>
                <Frame Name="frmMain" NavigationUIVisibility="Hidden"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
