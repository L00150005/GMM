<Page x:Class="GMM.PlanUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GMM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="PlanUI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="25*"/>
            <ColumnDefinition Width ="50*"/>
            <ColumnDefinition Width ="25*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="stkMain" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">

            <ListView Name="lstPlans" Grid.Row="0" Height="500" SelectionChanged="lstPlans_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Plan ID" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text ="{Binding planID}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Plan Name" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding planName}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Plan Desc." Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding planDescription}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Duration" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding planTerm}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>

        <StackPanel Name="stkAddEdit" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Visibility="Collapsed">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="17*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>

                </Grid.ColumnDefinitions>

                <Label Content="Plan ID" Grid.Column="0" Grid.Row="0" Width="80"  Margin="5,5,0,0"/>
                <Label Content="Plan Name" Grid.Column="0" Grid.Row="1" Width="80"  Margin="5,5,0,0"/>
                <Label Content="Plan Desc" Grid.Column="0" Grid.Row="2" Width="80"  Margin="5,5,0,0"/>
                <Label Content="Price" Grid.Column="0" Grid.Row="3" Width="80"  Margin="5,5,0,0"/>
                <Label Content="Duration" Grid.Column="0" Grid.Row="4" Width="80"  Margin="5,5,0,0"/>

                <TextBox Name="txbPlanID" Grid.Column="1" Grid.Row="0" Width="200" Height="26"/>
                <TextBox Name="txbPlanName" Grid.Column="1" Grid.Row="1" Width="200" Height="26"/>
                <TextBox Name="txbPlanDesc" Grid.Column="1" Grid.Row="2" Width="200" Height="26"/>
                <TextBox Name="txbPrice" Grid.Column="1" Grid.Row="3" Width="200" Height="26"/>
                <ComboBox Name="cmbDuration" Grid.Column="1" Grid.Row="4" Width="200" Height="26"/>

                <StackPanel Grid.Column="3" Grid.Row="6" HorizontalAlignment="Center" Orientation="Horizontal" >
                    <Button Name="btnCancelUpdate" Content="Cancel" Width="100" Height="26" Margin="5"/>
                    <Button Name="btnSave" Content="Save" Width="100" Height="26" Margin="5" Click="btnSave_Click"/>
                </StackPanel>

            </Grid>



        </StackPanel>

        <StackPanel Name ="stkPlanButtons" Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <Button Name="btnCancel" Content="Cancel" Width="100" Height="26" Margin="10"/>
            <Button Name="btnEdit" Content="Edit" Width="100" Height="26" Margin="10"/>
            <Button Name="btnAddNew" Content="Add New" Width="100" Height="26" Margin="10" Click="btnAddNew_Click"/>
        </StackPanel>
    </Grid>
</Page>
